{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}


    <main role="main">

            <div class="album py-5 bg-light">
                <div class="container-fluid">

                    <div class="row">
        {% for article in articles %}
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img src="{{ article.image }}" alt="{{ article.image }}">
                                <div class="card-body">
                                    <p class="card-text">{{ article.description|slice(0, 50) }}...</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="{{ path('article_show', {"id": article.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                                            <a href="{{ path('article_edit', {"id": article.id}) }}" class="btn btn-sm btn-outline-secondary">Editer</a>
                                            <a href="{{ path('article_delete', {"id": article.id}) }}" class="btn btn-sm btn-outline-secondary" onclick="return confirm('Attention ce ci va supprimer l\'article selectionnez')">Supprimer</a>
                                        </div>
                                        <small class="text-muted">{{ article.createdAt|date("d/m/Y") }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
        {% endfor %}
                    </div>
                </div>
            </div>

    </main><!-- /.container -->

{% endblock %}